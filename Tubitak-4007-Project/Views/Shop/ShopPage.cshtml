@model Tubitak_4007_Project.Models.Product
@{
    var products = ProductService.GetAllProducts();
}
<div id="myCarousel" class="carousel slide mb-6 w-75 mx-auto my-5" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active" aria-label="Slide 1" aria-current="true"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1" aria-label="Slide 2" class=""></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2" aria-label="Slide 3" class=""></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="bd-placeholder-img w-100 h-75" preserveAspectRatio="xMidYMid slice" aria-hidden="true" src="~/img/slide_p1.jpg" alt="Minecraft">
            <div class="container">
                <div class="carousel-caption text-start">
                    <h1>BLOK</h1>
                    <p class="opacity-75">Hayal Gücünüzü Serbest Bırakın, Minecraft Ürünleriyle Dünyanızı Kurun!</p>
                    <p><a class="btn btn-lg btn-success" href="#">İncele</a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="bd-placeholder-img w-100 h-75" preserveAspectRatio="xMidYMid slice" aria-hidden="true" src="~/img/slide_p2.png" alt="Minecraft">
            <div class="container">
                <div class="carousel-caption">
                    <h1>BLOK</h1>
                    <p>Minecraft Hayranlarına Özel: Eşsiz Ürünlerle Tanışın!</p>
                    <p><a class="btn btn-lg btn-success" href="#">İncele</a></p>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <img class="bd-placeholder-img w-100 h-75" preserveAspectRatio="xMidYMid slice" aria-hidden="true" src="~/img/slide_p3.png" alt="Minecraft">
            <div class="container">
                <div class="carousel-caption text-end">
                    <h1>Eğlence</h1>
                    <p>Blokların Sihirli Dünyası: Minecraft Aksesuarlarıyla Tanışın!</p>
                    <p><a class="btn btn-lg btn-success" href="#">İncele</a></p>
                </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="container">
    <div class="row">
        @{
            foreach (var product in ProductService.GetAllProducts())
            {
                <div class="col col-4">
                    <div class="card my-3 mx-auto" style="width: 18rem;">
                        <img height="250px" src="~/img/@product.imgPath" class="card-img-top" alt="Placeholder image">
                        <div class="card-body">
                            <h5 class="card-title text-center">@product.Name</h5>
                            <p class="card-text text-center fw-light">@product.Description</p>
                            <p class="text-success fs-5 fw-bold text-center">Fiyat: @product.Price TL</p>
                            <form asp-controller="Shop" asp-action="AddToCart" class="text-center" method="post">
                                <input type="hidden" name="id" value="@product.Id">
                                <input class="btn btn-success" value="Sepete Ekle" type="submit" />
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>